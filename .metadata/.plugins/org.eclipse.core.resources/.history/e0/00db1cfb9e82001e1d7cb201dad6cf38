package files;

import java.io.File;

public class CreateFolder {

	
		
		public static void CreatingFolder(String folderPath) {
			File folder=new File(folderPath);
			if(!folder.exists()) {
				folder.mkdir();
				System.out.println("created folder : "+ folderPath);
			}
			
		}
		public static boolean checkFolderExists(String folderPath) {
			File folder=new File(folderPath);
			return folder.exists();
			
		}
		public static void renameFoder(String oldPath,String newPath) {
			File old=new File(oldPath);
			File newpath=new File(newPath);
			
			if(old.exists()) {
				old.renameTo(newpath);
				System.out.println("folder name changed successfully");
			}
		}
		// Deleting Folder
		
		public static void deleteFolder(String folderPath) {
			File folder=new File(folderPath);
			if(folder.exists()) {
				folder.delete();
				System.out.println("Folder is Deleted ");
				}
			
		}
		
		public static void main(String[] args) {
		String	folderPath="C:\\FilesProgramFile";
		
		CreatingFolder(folderPath);
		boolean b=checkFolderExists(folderPath);
		System.out.println("File is Existing " +b);
		renameFoder("C:\\FilesProgramFile","C:\\RenamedFilesProgramFile");
		deleteFolder("C:\\\\RenamedFilesProgramFile");
		

	}

}
