package files;

import java.io.File;
import java.io.FileWriter;
import java.io.IOException;

public class FilesDemo {
	// create file
	public static void createFile(String filePath) {
		File myfile = new File(filePath);
		try {
			if (myfile.createNewFile()) {
				System.out.println("File is created " + filePath);
			} else {
				System.out.println("File is already  Exist");
			}
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

	}
	// write in file

	public static void fileWrite(String filePath) {
		FileWriter mywriter;
		try {
			mywriter = new FileWriter(filePath);

			mywriter.write("Welcome to my file.... ");
			mywriter.close();
			System.out.println("successfully wrote in file");
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

	public static void main(String[] args) {
		String filePath = "C:\\FilesProgram\\Myfile.txt" + "";
		createFile(filePath);
		fileWrite(filePath);

	}

}
