package lambdaExpression;

public class LambdaDemo 
{
	public static void main(String[] args)
	{
		Table t1 = new Table();
		Tables t2 = new Table();

		t1.show(4);
		t2.show(10);
		Tables t3 = (b) -> 
		{
			System.out.println("lambda Expression");
			for (int i = 1; i <= 10; i++) {
				System.out.println(b + "X" + i + " =" + i * b);
			}
		};
		t3.show(5);
	}

}

@FunctionalInterface

interface Tables {
	public void show(int a);

}

class Table implements Tables {
	@Override
	public void  show(int b) {
		for (int i = 1; i <= 10; i++) {
			System.out.println(b + "X" + i + " =" + i * b);
		}

	}

}
